#   This program is distributed in the hope that it will be useful,
#   but WITHOUT ANY WARRANTY; without even the implied warranty of
#   MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#   GNU General Public License for more details.
#
#   You should have received a copy of the GNU General Public License
#   along with this program. If not, see <http://www.gnu.org/licenses/>.
#
#   This script clean mailscanner temporary files
#
#   Usage: ms_tmp-cleaner [-h] -o '7'
#
#   Options:
#
#   -h,  Display help.
#   -o,  Filter file older than X days; default 7
#

PROGNAME='ms_tmp-cleaner'
VERSION='1.0'

usage() {
  cat <<-_EOF_
  Usage: $PROGNAME [-h] -o '7'

  Options:

  -h,  Display help.
  -o,  Filter file older than X days; default 7

_EOF_
}

while getopts ":ho:" option; do
  case $option in
  h)
    usage
    exit 0
    ;;
  o)
    olderthan=$OPTARG
    ;;
  :)
    echo "option $OPTARG requires an argument"
    exit 1
    ;;
  ?)
    echo "$OPTARG : invalid option"
    exit 1
    ;;
  esac
done

if [ "$olderthan" == '' ]; then
  olderthan=7
  exit 1
fi

find /var/spamtagger/spool/tmp/mailscanner -maxdepth 1 -mmin +$olderthan -name msg-* -print -exec rm -rf {} \;
exit 0
